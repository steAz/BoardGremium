<Window x:Class="BoardGremiumCore.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BoardGremiumCore"
        xmlns:viewTablut="clr-namespace:BoardGremiumCore.Tablut"
        xmlns:viewAdugo="clr-namespace:BoardGremiumCore.Adugo"
        mc:Ignorable="d"
        Title="GameWindow" Height="900" Width="700">
    <Grid>
        <Label x:Name="PlayerTurnLabel" Content="PlayerTurnLabel" HorizontalAlignment="Center" VerticalAlignment="Top" Height="50" Margin="148,40,140,0" Width="404" Visibility="Hidden"/>
        <Label x:Name="ErrorMoveLabel" Content="ErrorLabel" HorizontalAlignment="Center" VerticalAlignment="Top" Height="50" Margin="148,80,140,0" Width="404" Visibility="Hidden"/>
        <DockPanel Name="MainDockPanel">
            <viewTablut:TablutBoard x:Name="tablutBoard" VerticalAlignment="Center" Margin="0,186,0,0" />
            <viewAdugo:AdugoBoard x:Name="adugoBoard" VerticalAlignment="Center" Margin="0,186,0,0" />
        </DockPanel>
    </Grid>

</Window>
